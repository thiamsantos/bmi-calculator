$main-color = #009688
$secondary-color = #ccc
$white = #fff
$text-color = rgba(0,0,0,.87)

$shadow-key-umbra-opacity = .2
$shadow-key-penumbra-opacity = .14
$shadow-ambient-shadow-opacity = .12

*
  border 0
  box-sizing inherit
  font-family inherit
  font-size inherit
  margin 0
  padding 0

html
  box-sizing border-box
  font-family Helvetica,sans-serif
  font-size 10px

body
  color $text-color
  font-size 1.5rem

.focusable:focus
  box-shadow 0 0 1px 1px $main-color
  outline 0

.container
  padding 5rem

.title
  font-size 3rem
  line-height 1.8

.unit
  font-size 1.5rem
  line-height 1.6

.unit-options
  display none

  &-label
    color $text-color
    display inline-block
    font-size 1.5rem
    font-weight 700
    padding ((3.6 - 1.5) / 2)rem 0

    & ~ &
      margin-left .5rem

    ^[0]:checked + &
      color $main-color

.text-field
  margin-top 2rem
  padding-top 2.5rem
  position relative
  width 100%

  &__label
    bottom 4rem
    color $text-color
    font-size 1.3rem
    pointer-events none
    position absolute
    transition .2s cubic-bezier(.4,0,.2,1) all

  &__input
    background transparent
    border-bottom 1px solid $secondary-color
    color $text-color
    display block
    font-size 1.5rem
    margin 0
    outline 0
    padding 1rem 0
    transition .2s cubic-bezier(.4,0,.2,1) all
    width 100%

    &:focus
      border-color $main-color

      & + ^[0]__label
        color $main-color

.result
  margin-top 3rem
  text-align center

  &__value
    color $main-color
    font-size 2rem
    font-weight 700

  &__status
    font-size 1.8rem
