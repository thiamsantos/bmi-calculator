{
  "name": "bmi-calculator",
  "version": "0.0.1",
  "description": "A BMI calculator build with functional js and stylus",
  "main": "main.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --watch test/*.js",
    "standard": "standard src/**/*.js",
    "lint:styl": "stylint src/styl/main.styl --config .stylintrc",
    "build:css": "stylus -w -c src/styl/main.styl -o dist/",
    "build:js": "rollup -c",
    "watch:js": "rollup -w -c"
  },
  "author": "Thiago Santos",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "mocha": "^3.0.2",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "standard": "^8.0.0",
    "stylint": "^1.5.6",
    "stylus": "^0.54.5"
  }
}
